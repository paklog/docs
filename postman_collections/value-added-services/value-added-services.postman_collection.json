            "description": "**Summary**: Creates a new job to assemble a kit from multiple component SKUs.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"kitSku\": \"KIT-HOLIDAY-2025\",\n  \"quantity\": 200,\n  \"components\": [\n    {\n      \"sku\": \"PROD-A\",\n      \"quantityPerKit\": 1\n    },\n    {\n      \"sku\": \"PROD-B\",\n      \"quantityPerKit\": 2\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": [
            {
              "name": "202 Accepted",
              "originalRequest": null,
              "status": "Kitting job accepted.",
              "code": 202,
              "header": [],
              "body": "{\n  \"jobId\": \"VAS-JOB-112233\",\n  \"status\": \"QUEUED\"\n}",
