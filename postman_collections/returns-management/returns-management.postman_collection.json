  },
  "item": [
    {
      "name": "Returns (RMAs)",
      "item": [
        {
          "name": "Initiate a Return (RMA)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/returns",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "returns"
              ]
            },
            "description": "**Summary**: Initiate a product return and create a Return Merchandise Authorization (RMA).\n\nValidates the return request against business rules like the return window and order history.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"ORD-67890\",\n  \"returnItems\": [\n    {\n      \"sku\": \"PROD-123\",\n      \"quantity\": 1,\n      \"reasonCode\": \"DEFECTIVE\"\n    }\n  ],\n  \"customerComments\": \"The item does not power on.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": [
            {
              "name": "201 Created",
              "originalRequest": null,
              "status": "Return request accepted and RMA created.",
              "code": 201,
              "header": [],
              "body": "{\n  \"returnId\": \"RET-ABCDE123\",\n  \"rmaNumber\": \"RMA-987654\",\n  \"status\": \"APPROVED\",\n  \"shippingLabelUrl\": \"https://api.paklog.com/returns/RET-ABCDE123/label\"\n}",
              "_postman_previewlanguage": "json"
            },
            {
              "name": "400 Bad Request",
              "originalRequest": null,
              "status": "Invalid request, e.g., outside return window.",
              "code": 400,
              "header": [],
              "body": "{\n  \"error\": \"VALIDATION_ERROR\",\n  \"message\": \"Return window has expired.\"\n}",
              "_postman_previewlanguage": "json"
            }
          ]
        },
        {
          "name": "Get Return Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/returns/{{returnId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "returns",
                "{{returnId}}"
              ]
            },
            "description": "**Summary**: Retrieves the details and current status of a specific return."
          },
          "response": [
            {
              "name": "200 OK",
              "originalRequest": null,
              "status": "Successful operation.",
              "code": 200,
              "header": [],
              "body": "{\n  \"returnId\": \"RET-ABCDE123\",\n  \"rmaNumber\": \"RMA-987654\",\n  \"status\": \"INSPECTED\",\n  \"items\": [\n    {\n      \"sku\": \"PROD-123\",\n      \"quantity\": 1,\n      \"condition\": \"DEFECTIVE\"\n    }\n  ],\n  \"fraudAssessment\": {\n    \"riskLevel\": \"LOW\",\n    \"score\": 0.15\n  },\n  \"disposition\": {\n    \"decision\": \"RETURN_TO_VENDOR\"\n  }\n}",
              "_postman_previewlanguage": "json"
            }
          ]
        }
      ]
    },
