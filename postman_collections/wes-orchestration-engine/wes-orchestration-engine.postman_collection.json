            "body": {
              "mode": "raw",
              "raw": "{\n  \"workflowType\": \"ORDER_FULFILLMENT\",\n  \"referenceId\": \"ORD-12345\",\n  \"payload\": {\n    \"orderId\": \"ORD-12345\",\n    \"priority\": \"HIGH\"\n  }\n}",
              "options": {
